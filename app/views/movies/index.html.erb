<div class="container">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h1>API Video Google Drive</h1>
    </div>
    <div class="panel-body">
      <%= form_tag movies_path, method: :post do %>
        <div class="form-group">
          <%= url_field_tag "url", nil, class: "form-control", required: true,
            placeholder: "https://docs.google.com/file/d/xxxxxxxxxxxxxxxx/view" %>
        </div>
        <div class="form-group">
          <%= submit_tag "Get Video Links",  class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= @links.present? ? render("result") : "Your url have a problem" %>
</div>
